<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient background matching Flutter splash screen -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#1A0B2E"
                android:endColor="#42218E"
