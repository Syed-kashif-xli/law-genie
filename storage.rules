
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /documents/{fileName} {
      allow read, write: if request.auth != null;
    }
    
    // Allow read access to bare_acts folder for authenticated users (or public if needed)
    match /bare_acts/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only admin
    }
  }
}
