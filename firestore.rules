rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the request is from the owner of the data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // 1. Users Collection:
    // Users can read/write ONLY their own document.
    match /users/{userId} {
      allow create: if isAuthenticated() && isOwner(userId);
      allow read, update, delete: if isAuthenticated() && isOwner(userId);
      
      match /cases/{caseId} {
         allow read, write: if isAuthenticated() && isOwner(userId);
         
         match /timeline/{timelineId} {
            allow read, write: if isAuthenticated() && isOwner(userId);
         }
      }
      
      match /diary/{diaryId} {
         allow read, write: if isAuthenticated() && isOwner(userId);
      }

      // Allow access to Usage Stats
      match /usage/{docId} {
         allow read, write: if isAuthenticated() && isOwner(userId);
      }
    }

    // 2. Chat History Collection:
    // Assuming documents have a 'userId' field or are subcollections
    // Based on previous code, chats seem to be Hive (local), but if synced:
    match /chats/{chatId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 3. Certified Copies (Orders):
    // Users can create orders for themselves.
    // Users can read/update ONLY their own orders.
    match /orders/{orderId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read, update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 4. Subscriptions History (Smart Extension & Premium):
    match /subscriptions/{subId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // 5. Bare Acts (Read Only for everyone, Admin write)
    match /bare_acts/{actId} {
      allow read: if true; // Publicly readable
      allow write: if false; // Only manageable via Admin Console
    }

    // 6. News (Read Only for everyone, Admin write)
    match /news/{newsId} {
      allow read: if true; // Publicly readable
      allow write: if false; // Only manageable via Admin Console
    }
    
    // 7. Usage Limits (Needed for bootstrapping)
    match /usage_limits/{planId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    // 8. Global Usage Collection (if not inside users)
    match /usage/{userId} {
       allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // 9. System Configuration (For Global Limits)
    match /system/{docId} {
       allow read: if isAuthenticated();
       allow write: if isAuthenticated(); // Allow users to update limit count
    }
    
    // Default: Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
